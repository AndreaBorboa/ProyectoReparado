<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gris2"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/borde">
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <ImageView
                android:layout_width="79dp"
                android:layout_height="66dp"
                android:padding="5dp"
                android:src="@drawable/peon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombreusuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rick Sanchez"
                    android:textColor="@color/white"
                    android:textSize="10dp"
                    android:fontFamily="@font/littera_regular"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="5dp"/>

                <RatingBar
                    android:id="@+id/ratingBar_cines"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:theme="@style/RatingBar.Yellow"
                    android:layout_marginTop="2dp"
                    android:numStars="5"
                    style="?android:attr/ratingBarStyleSmall"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"
                    android:text="23/marzo/2021"
                    android:textSize="10dp"
                    android:fontFamily="@font/littera_regular"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp">

                    <ToggleButton
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:textOff=""
                        android:textOn=""
                        android:layout_marginTop="2dp"
                        android:background="@drawable/toggle_vote"
                        android:gravity="end"
                        android:layout_marginLeft="50dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="31"
                        android:textColor="@color/white"
                        android:textSize="10dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/littera_regular"/>
                    <ToggleButton
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:textOff=""
                        android:textOn=""
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/toggle_downvote"
                        android:gravity="end"/>

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/comentariousuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A mi me a gustado mucho, partiendo de la base que ya sabía lo que iba a ver, la verdad es que a sido muy entretenida y con el cambio de guion que hay en la película se vuelve muy interesante."
                android:textColor="@color/white"
                android:textSize="10dp"
                android:fontFamily="@font/littera_regular"
                android:layout_gravity="right"
                android:padding="15dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>